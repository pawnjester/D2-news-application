<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.andela.d2_news_application.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_contactsFragment"
            app:destination="@id/contactsFragment" />
    </fragment>
    <fragment
        android:id="@+id/foodFragment"
        android:name="com.andela.d2_news_application.ui.food.FoodFragment"
        android:label="Food"
        tools:layout="@layout/fragment_food">
        <action
            android:id="@+id/action_foodFragment_to_contactsFragment"
            app:destination="@id/contactsFragment" />
    </fragment>
    <fragment
        android:id="@+id/fashionFragment"
        android:name="com.andela.d2_news_application.ui.fashion.FashionFragment"
        android:label="Fashion"
        tools:layout="@layout/fragment_fashion">
        <action
            android:id="@+id/action_fashionFragment_to_contactsFragment"
            app:destination="@id/contactsFragment" />
    </fragment>
    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.andela.d2_news_application.ui.contacts.ContactsFragment"
        android:label="ContactsFragment"
        tools:layout="@layout/fragment_contacts"/>

</navigation>